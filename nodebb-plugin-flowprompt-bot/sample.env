[Unit]
Description=NodeBB Forum
After=network.target

[Service]
Type=simple

# ⚠️ Change this user if your NodeBB runs under a different user
User=nodebb

# ⚠️ Change this path to your actual NodeBB install directory
WorkingDirectory=/home/nodebb/nodebb

# ⚠️ Ensure this matches `which node`
ExecStart=/usr/bin/node /home/nodebb/nodebb/app.js

Restart=always
RestartSec=10

# =========================
# FlowPrompt Bot Variables
# =========================
Environment="SUPPORT_CATEGORY_ID=6"
Environment="FLOWPROMPT_WEBHOOK_URL=https://api.flowprompt.com/api/internal/nodebb/event"
Environment="FLOWPROMPT_WEBHOOK_SECRET=******"

# Optional: Node environment
Environment="NODE_ENV=production"

[Install]
W
